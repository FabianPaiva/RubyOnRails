<!-- Google font -->
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400&display=swap" rel="stylesheet">
<%= stylesheet_link_tag "index_sub_group.css", "data-turbo-track": "reload", content: "no-preview"  %>
<div class="container-main">
  <div class="container-title-folders">
    <p>Sub Grupo de Cuentas</p>
    <p id="subtitle1">Listado de Sub Grupo de cuentas</p>
    <%= link_to "", menu_account_path , class: 'btn btn-primary bi bi-arrow-counterclockwise rounded-1 float-right icon-back-group' %>
    <%= link_to "",sub_group_new_path , class: 'btn btn-primary bi bi-plus-lg rounded-1 float-right icon-new' %>
  </div>
  <div class="container-folders">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th style="text-align: center">Nombre Grupo de Cuenta</th>
        <th style="text-align: center">Codigo Sub Grupo de Cuenta</th>
        <th style="text-align: center">Nombre Sub Grupo de Cuenta</th>
        <th style="text-align: center">Editar o Ver</th>
      </tr>
      </thead>
      <% @sub_groups.each do |subGroup|   %>
        <tbody>
        <tr>
          <th style="text-align: center"><%= subGroup.group.account_name %></th>
          <td style="text-align: center"><%= subGroup.code_sub_group %></td>
          <td style="text-align: center"><%= subGroup.name_sub_group %></td>
          <td style="text-align: center">&nbsp&nbsp<%= link_to "",sub_group_edit_path(subGroup), class:'btn btn-outline rounded-circle bi bi-pencil pencil-edit', style: 'font-size: 25px'%>&nbsp&nbsp</td>
        </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>